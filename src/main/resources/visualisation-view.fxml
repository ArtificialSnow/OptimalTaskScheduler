<HBox style="-fx-background-color: #F8F8F8;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="534.0" maxWidth="190.0" spacing="10.0" style="-fx-background-color: #e9c4bc;">
         <children>
            <Region VBox.vgrow="ALWAYS" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Notice me Sinnenpai" wrappingWidth="125.52471923828125">
               <font>
                  <Font name="System Italic" size="20.0" />
               </font>
            </Text>
            <ImageView fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>
            <Region VBox.vgrow="ALWAYS" />
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <VBox alignment="TOP_CENTER">
                     <children>
                        <Label text="Input Graph">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="inputGraphLabel" text="INPUT.dot">
                           <font>
                              <Font size="19.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER">
                     <children>
                        <Label text="Total Tasks">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="totalTasksLabel" text="11">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER">
                     <children>
                        <Label text="Thread Count">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="threadCountLabel" text="2">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <effect>
            <DropShadow />
         </effect>
      </VBox>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Status:">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </Label>
                  <Label fx:id="statusLabel" text="WAITING" textFill="#e7a499">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Time Elapsed:">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="timerLabel" text="00:00:00:00">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <StackedBarChart fx:id="stackedBarChart" animated="false" legendVisible="false" maxWidth="400.0" minWidth="400.0" prefWidth="400.0" rotate="180.0">
              <xAxis>
                <CategoryAxis rotate="180.0" fx:id="xAxis">
                     <tickLabelFont>
                        <Font size="14.0" />
                     </tickLabelFont>
                  </CategoryAxis>
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="yAxis" side="RIGHT" tickLabelRotation="180.0">
                     <tickLabelFont>
                        <Font size="12.0" />
                     </tickLabelFont>
                  </NumberAxis>
              </yAxis>
            </StackedBarChart>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" spacing="30.0">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#start" prefHeight="35.0" prefWidth="141.6" text="START">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <VBox styleClass="container">
               <children>
                  <Label text="States Examined">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="stateCountLabel" text="0">
                     <font>
                        <Font size="44.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            <VBox styleClass="container">
               <children>
                  <Label text="Current Best">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="currentBestLabel" text="-">
                     <font>
                        <Font size="44.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets right="30.0" />
         </padding>
      </VBox>
   </children>
</HBox>
